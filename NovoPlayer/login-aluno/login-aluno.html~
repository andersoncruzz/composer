<script>
	var un, ps;
	function logar(){
		un = document.getElementById("matricula").value;
		$.post("http://localhost:5000/login/1",
        {
            matricula: un
        },
        function(data, status){
            retorno = data.split(";");
            if(retorno[0] == "True") {
		alert("Seja Bem Vindo Aluno(a): " + retorno[1]);
            	window.location.href = "../Aula/index.html";
            }
            else{
		//alert("Puxa vida, deu erro! Tem certeza que informou seus dados corretamente?");
            	var alerta = document.getElementById('alerta');
				alerta.className = 'alert alert-danger';
				alerta.innerHTML = "Puxa vida, deu erro! Tem certeza que informou seus dados corretamente?";
            }
        });
	}
</script>
